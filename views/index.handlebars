<h1>Eat da Burger</h1>

<h2>Burgers that are not devoured!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burger_name}}</li>
        <!--<form class="devour-form">
          <input type="hidden" id="id" value={{id}}>
          <button type="submit">Devour</button>
        </form>-->
        <form method="POST" action="/burger/devour?_method=PUT" class="button-size">
					<input input type="hidden" name="burgerId" value={{id}}>
					<button type="submit" class="btn btn-default">Devour</button>
				</form>        
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      <div>
        <li>{{burger_name}}</li>
      </div>
    {{/if}}
  {{/each}}
</ul>

